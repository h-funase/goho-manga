<div class="like-link" id="like-link-<%= comic.id %>">
  <% if current_user.likes.find_by(comic_id: comic.id) %>
    <%= link_to unlike_path(comic.id), method: :delete, remote: true do %>
        <div class = "iine__button">❤️<%= comic.likes.count %></div>
    <% end %>
  <% else %>
    <%= link_to like_path(comic.id), method: :post, remote: true do %>
        <div class = "iine__button">♡️<%= comic.likes.count %></div>
    <% end %>
  <% end %>
</div>