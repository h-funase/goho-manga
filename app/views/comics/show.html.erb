<div class ="contents row">
  <div class="content_post" style="background-image: url(<%= @comic.image %>);">
    <% if user_signed_in? && current_user.id == @comic.user_id %>
    <div class="more">
      <%# <span> %>
      <%# image_tag 'arrow_top.png' %>
      <%# </span>  %>
      <ul class="more_list">
        <li>
          <%= link_to '編集', "/comics/#{@comic.id}/edit", method: :get %>
        </li>
        <li>
          <%= link_to '削除', "/comics/#{@comic.id}", method: :delete %>
        </li>
      </ul>
    </div>
    <% end %>
    <%= simple_format(@comic.title) %>
    <span class="name">
      <a href="/users/<%= @comic.user.id %>">
        <span>投稿者</span><%= @comic.user.nickname %>
      </a>
    </span>
  </div>

  <div class="container">
  
  <% @comic.episodes.each do |episode|%>
  <%= link_to "第#{episode.story_number}話","#{episode.url}" %><br> 
  <% end %>

  <%= link_to "ストーリーの追加",new_comic_episode_path(@comic)%>
  

  <% @comic.tags.each do|tag| %>
      <%= link_to "・#{tag.name}",comics_path(tag_id: tag.id) %>
    <% end %><br>

<%= link_to 'タグの編集',"/comics/#{@comic.id}/edit", method: :get %>


  <h3>いいね件数: <%= @comic.likes.count %></h3>
<% if current_user.already_liked?(@comic) %>
  <%= button_to 'いいねを取り消す', comic_like_path(@comic), method: :delete,remote: true  %>
<% else %>
  <%= button_to 'いいね', comic_likes_path(@comic), remote: true  %>
<% end %>
    <div class="comments">
      <h4>＜コメント一覧＞</h4>
      <% if @comments %>
        <% @comments.each do |comment| %>
          <p>
            <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %>：</strong>
            <%= comment.text %>
          </p>
        <% end %>
      <% end %>
    </div>
    <% if current_user %>
      <%= form_with(model: [@comic, @comment], local: true) do |form| %>
        <%= form.text_area :text, placeholder: "コメントする", rows: "2" %>
        <%= form.submit "送信" %>
      <% end %>
    <% else %>
      <strong><p>※※※ コメントの投稿には新規登録/ログインが必要です ※※※</p></strong>
    <% end %>
  </div>
</div>